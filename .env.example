# Example env file. Copy to .env and fill in secrets.

# Database (used by docker-compose and Spring)
DB_HOST=localhost
DB_PORT=5432 or 3306
DB_NAME=db_example
DB_USER=db_user
DB_PASSWORD=db_password

# Application
APP_NAME=MyAppExample
SPRING_DATABASE=jdbc:postgresql://postgres or jdbc:mysql://mysql
SPRING_DATASOURCE_DRIVER=org.postgresql.Driver or com.mysql.cj.jdbc.Driver
SPRING_PROFILES_ACTIVE=dev or prod
SERVER_PORT=8080

# JPA / Hibernate
SPRING_JPA_DATABASE_PLATFORM=org.hibernate.dialect.PostgreSQLDialect or org.hibernate.dialect.MySQL8Dialect
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=true
SPRING_JPA_PROPERTIES_HIBERNATE_FORMAT_SQL=true

# Security / secrets
JWT_SECRET=example_jwt_secret_123456
SPRING_SECURITY_USER_NAME=admin_example
SPRING_SECURITY_USER_PASSWORD=admin_password_example

JAVA_OPTS=-Xmx512m
